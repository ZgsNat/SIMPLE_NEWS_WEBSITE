<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>Controller.UsersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DescNewsController</servlet-name>
        <servlet-class>Controller.DescNewsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatogoryController</servlet-name>
        <servlet-class>Controller.CatogoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckCond</servlet-name>
        <servlet-class>Controller.CheckConditional</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailNews</servlet-name>
        <servlet-class>Controller.NewsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListNewsByUsers</servlet-name>
        <servlet-class>Controller.ListNewsByUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateNews</servlet-name>
        <servlet-class>Controller.UpdateNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountNews</servlet-name>
        <servlet-class>Controller.CountNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DescNewsController</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatogoryController</servlet-name>
        <url-pattern>/catogory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckCond</servlet-name>
        <url-pattern>/checkcondi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailNews</servlet-name>
        <url-pattern>/detailnews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNewsByUsers</servlet-name>
        <url-pattern>/listnewsbyusers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateNews</servlet-name>
        <url-pattern>/updatenews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountNews</servlet-name>
        <url-pattern>/countnews</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
